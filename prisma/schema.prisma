generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model products {
  id      Int      @id @default(autoincrement())
  title   String
  img String
  description String
  price Int
  in_stock Int
  category String @default("protein")
  brand String
  made_in String
  weight Int
  amount_of_portion Int
  release_form String
}


model users {
  id      Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  email String @unique
  first_name String
  last_name String
  password String
  is_verified Boolean @default(false)
